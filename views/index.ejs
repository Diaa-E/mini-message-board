<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Mini Message Board</title>
    <link rel="stylesheet" href="./css/common.css">
    <link rel="stylesheet" href="./css/index.css">
    <link rel="shortcut icon" href="./assets/images/favicon.svg" type="svg">
</head>
<body>
    <%- include("components/header") %>
    <div class="content">
        <h2 class="page-title">All Messages</h2>
        <a class="button-primary button-link" href="./new">Add a new Message</a>
        <ul class="message-list">
            <% const now = new Date();
            messages.forEach((message) => {%>
                <%- include("components/message", { message: { ...message, now: now }, convertMs: convertMs }) %>
            <%});%>
        </ul>
    </div>
    <%- include("components/footer") %>
</body>
</html>